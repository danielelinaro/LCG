<dynamicclamp>
  <entities>
    <entity>
      <name>H5Recorder</name>
      <id>0</id>
      <parameters><compress>false</compress></parameters>
    </entity>

    <entity>
      <name>RealNeuron</name>
      <id>1</id>
      <parameters>
	<spikeThreshold>-20</spikeThreshold>
	<V0>-65</V0>
        <delay>2</delay>
	<kernelFile>kernel.dat</kernelFile>
	<deviceFile>/dev/comedi0</deviceFile>
	<inputSubdevice>0</inputSubdevice>
	<outputSubdevice>1</outputSubdevice>
	<inputRange>[-10,+10]</inputRange>
	<readChannel>0</readChannel>
	<writeChannel>1</writeChannel>
	<inputConversionFactor>100</inputConversionFactor>
	<outputConversionFactor>0.001</outputConversionFactor>
	<reference>GRSE</reference>
      </parameters>
      <connections>0,4</connections>
    </entity>

    <!-- Stimulus current -->
    <entity>
      <name>Waveform</name>
      <id>2</id>
      <parameters><filename>current.stim</filename></parameters>
      <connections>0,1</connections>
    </entity>

    <!-- Frequency waveform -->
    <entity>
      <name>Waveform</name>
      <id>3</id>
      <parameters><filename>frequency.stim</filename></parameters>
      <connections>0,4</connections>
    </entity>

    <entity>
      <name>FrequencyClamp</name>
      <id>4</id>
      <parameters>
	<baselineCurrent>0</baselineCurrent>
	<tau>3</tau>
	<gp>10</gp>
	<gi>3</gi>
	<gd>1</gd>
      </parameters>
      <connections>0,1</connections>
    </entity>

  </entities>

  <simulation>
    <tend>30</tend>
    <rate>20000</rate>
  </simulation>

</dynamicclamp>
