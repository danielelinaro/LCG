<dynamicclamp>
  <entities>
    <entity>
      <name>H5Recorder</name>
      <id>0</id>
      <parameters><compress>false</compress></parameters>
    </entity>

    <entity>
      <name>RealNeuron</name>
      <id>1</id>
      <parameters>
	<spikeThreshold>-20</spikeThreshold>
	<V0>-65</V0>
	<kernelFile>kernel.dat</kernelFile>
	<deviceFile>/dev/comedi0</deviceFile>
	<inputSubdevice>0</inputSubdevice>
	<outputSubdevice>1</outputSubdevice>
	<inputRange>[-10,+10]</inputRange>
	<!-- HEKA -->
	<readChannel>0</readChannel>
	<writeChannel>1</writeChannel>
	<inputConversionFactor>100</inputConversionFactor>
	<outputConversionFactor>0.001</outputConversionFactor>
	<reference>GRSE</reference>
	<!-- AXON -->
	<!--
	<readChannel>2</readChannel>
	<writeChannel>1</writeChannel>
	<inputConversionFactor>20</inputConversionFactor>
	<outputConversionFactor>0.0025</outputConversionFactor>
	<reference>NRSE</reference>
	-->
      </parameters>
      <connections>0,2</connections>
    </entity>

    <entity>
      <name>PeriodicPulse</name>
      <id>2</id>
      <parameters>
	<frequency>5</frequency>
	<duration>0.04</duration>
	<amplitude>300</amplitude>
	<probability>0.5</probability>
	<tau>3</tau>
	<gp>10</gp>
	<gi>3</gi>
	<gd>1</gd>
      </parameters>
      <connections>0,1</connections>
    </entity>

  </entities>

  <simulation>
    <tend>30</tend>
  </simulation>

</dynamicclamp>
