<dynamicclamp>
  <entities>

    <entity>
      <name>H5Recorder</name>
      <id>0</id>
      <parameters>
	<filename>autapse.h5</filename>
        <compress>false</compress>
      </parameters>
    </entity>

    <entity>
      <name>RealNeuron</name>
      <id>1</id>
      <parameters>
	<spikeThreshold>-20</spikeThreshold>
	<V0>-65</V0>
	<kernelFile>kernel.dat</kernelFile>
	<deviceFile>/dev/comedi0</deviceFile>
	<inputSubdevice>0</inputSubdevice>
	<outputSubdevice>1</outputSubdevice>
	<inputRange>[-10,+10]</inputRange>
	<readChannel>0</readChannel>
	<writeChannel>0</writeChannel>
	<inputConversionFactor>100</inputConversionFactor>
	<outputConversionFactor>0.001</outputConversionFactor>
	<reference>GRSE</reference>
      </parameters>
      <connections>0</connections>
    </entity>

    <entity>
      <name>Connection</name>
      <id>2</id>
      <parameters><delay>3e-3</delay></parameters>
      <connections>3</connections>
    </entity>

    <entity>
      <name>TMGSynapse</name>
      <id>3</id>
      <parameters>
	<E>-80</E>
	<weight>200</weight>
	<U>0.03</U>
	<tau1>0.003</tau1>
	<tauRec>0.1</tauRec>
	<tauFacil>1</tauFacil>
      </parameters>
      <connections>0,1</connections>
    </entity>

    <entity>
      <name>Waveform</name>
      <id>4</id>
      <parameters>
	<filename>current_stimfile</filename>
	<units>pA</units>
      </parameters>
      <connections>0,1</connections>
    </entity>

    <entity>
      <name>Waveform</name>
      <id>5</id>
      <parameters>
	<filename>gexc_stimfile</filename>
	<units>nS</units>
      </parameters>
      <connections>0,7</connections>
    </entity>

    <entity>
      <name>Waveform</name>
      <id>6</id>
      <parameters>
	<filename>ginh_stimfile</filename>
	<units>nS</units>
      </parameters>
      <connections>0,8</connections>
    </entity>

    <entity>
      <name>ConductanceStimulus</name>
      <id>7</id>
      <parameters>
	<E>0</E>
      </parameters>
      <connections>1</connections>
    </entity>

    <entity>
      <name>ConductanceStimulus</name>
      <id>8</id>
      <parameters>
	<E>-80</E>
      </parameters>
      <connections>1</connections>
    </entity>

  </entities>

  <simulation>
    <tend>7</tend>
    <rate>20000</rate>
  </simulation>

</dynamicclamp>
