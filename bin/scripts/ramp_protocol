#!/bin/bash

#
# Ramp protocol
# Author: Daniele Linaro, September 2012
#

print_help()
{
    echo
    echo "Ramp protocol"
    echo
    echo "Usage : `basename $0` [options <value>]"
    echo
    echo "where options are:"
    echo
    echo "   -h   display this help message and exit"
    echo "   -d   specify the duration of the ramp (default 10 sec)"
    echo "   -a   specify the peak of the ramp (default 500 pA)"
    echo "   -n   specify the number of repetitions (default 2)"
    echo "   -i   specify the interval between repetitions (default 30 sec)"
    echo
}

duration=10
amplitude=500
repetitions=2
interval=30
while getopts ":d:a:n:i:h" opt ; do
    case $opt in
	d)
	    duration=$OPTARG
	    ;;
	a)
	    amplitude=$OPTARG
	    ;;
	n)
	    repetitions=$OPTARG
	    ;;
	i)
	    interval=$OPTARG
	    ;;
	h)
	    print_help
	    exit 0
	    ;;
	\?)
	    echo "Invalid option: -$OPTARG."
	    echo "Type `basename $0` -h for help."
	    exit 1
	    ;;
    esac
done

if [ -z "${PROTOCOLS_PATH:-}" ] ; then
    origstimfile=$HOME/protocols/ramp/ramp.stim
else
    origstimfile=$PROTOCOLS_PATH/ramp/ramp.stim
fi

stimfile=/tmp/ramp.stim

sed -e 's/T/'$duration'/' -e 's/A/'$amplitude'/' $origstimfile > $stimfile
kernel_protocol
cclamp -f $stimfile -n $repetitions -i $interval
rm $stimfile
